<div id="sgUploadState">
    <div id="sgProgress">
        <span></span>
        <div></div>
    </div>
    <table>
        <thead>
        <tr>
            <th class="sgrow1">{{sgLang.file}}</th>
            <th class="sgrow2">{{sgLang.size}}</th>
            <th class="sgrow3">{{sgLang.progress}}</th>
        </tr>
        </thead>
    </table>
    <div id="sgFilesList">
        <table>
            <tbody>
            {{#each files}}
                <tr id="sgFilesListRow{{@index}}">
                    <td class="sgrow1">{{this.name}}</td>
                    <td class="sgrow2">{{bytesToSize this.size}}</td>
                    <td class="sgrow3 progress"></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
    </div>
    <div style="clear:both;padding:10px;float:right;">
        <div id="sgUploadCancel" class="btn btn-right">
            <div class="btn-text">
                <img src="{{modxTheme}}/images/icons/stop.png">
                <span>{{sgLang.cancel}}</span>
            </div>
        </div>
    </div>
</div>